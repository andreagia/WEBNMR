/*
 ** Collapsing fieldsets
 */
.collapsed
{
  border-bottom-width: 0;
  border-left-width: 0;
  border-right-width: 0;
  margin-bottom: 0;
  height: 1em;
}

.collapsed *
{
  display: none;
}

.collapsed legend
{
  display: block;
}

/* Note: IE-only fix due to '* html' (breaks Konqueror otherwise). */
* html .collapsed legend,
* html .collapsed legend *,
* html .collapsed table *
{
  display: inline;
}

.collapsible legend a
{
  display: block;
}

.collapsible
{
  padding-top: 0.5em;
}